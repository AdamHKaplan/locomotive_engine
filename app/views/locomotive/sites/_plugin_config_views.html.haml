
%script{ :type => 'text/javascript' }
  :plain
    Locomotive.content_types = #{current_site.content_types.to_json}

- @plugin_objects_by_id.each do |plugin_id, plugin|
  - if can?(:configure, @plugin_data_by_id[plugin_id])
    - str = plugin.config_template_string
    - if str
      %script{ :type => 'text/html', :id => "#{plugin_id}_config_view" }
        != str
